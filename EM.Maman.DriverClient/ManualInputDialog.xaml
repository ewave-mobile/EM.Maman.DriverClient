<Window x:Class="EM.Maman.DriverClient.ManualInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EM.Maman.DriverClient"
        xmlns:vm="clr-namespace:EM.Maman.DriverClient.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:EM.Maman.DriverClient.Converters"
        mc:Ignorable="d"
        Title="הזנה ידנית" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="White"
        FlowDirection="RightToLeft"
        d:DataContext="{d:DesignInstance Type=vm:ManualInputViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
            <converters:BoolToBorderBrushConverter x:Key="BoolToBorderBrushConverter" />
            <converters:BoolToPreviewTitleConverter x:Key="BoolToPreviewTitleConverter" />
            <Style x:Key="OperationTypeButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="15,5" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
            <Style x:Key="ImportButtonStyle" TargetType="Button" BasedOn="{StaticResource OperationTypeButtonStyle}">
                <Setter Property="Background" Value="#FFFFFF" />
                <Setter Property="BorderBrush" Value="#BEBBBB" />
                <Setter Property="Foreground" Value="#BEBBBB" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsImportSelected}" Value="True">
                        <Setter Property="Background" Value="#DCE8FF" />
                        <Setter Property="Foreground" Value="#329DFF" />
                        <Setter Property="BorderBrush" Value="#329DFF" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource OperationTypeButtonStyle}">
                <Setter Property="Background" Value="#FFFFFF" />
                <Setter Property="BorderBrush" Value="#BEBBBB" />
                <Setter Property="Foreground" Value="#BEBBBB" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsImportSelected}" Value="False">
                        <Setter Property="Background" Value="#DCE8FF" />
                        <Setter Property="Foreground" Value="#329DFF" />
                        <Setter Property="BorderBrush" Value="#329DFF" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="הזנה ידנית"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Operation Type Selection -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Vertical" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,20">
            <TextBlock Text="בחירת סוג פעולה:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0" 
                       FontSize="16"/>
            <StackPanel Orientation="Horizontal">
            <Button Content="יבוא" 
                    Command="{Binding SwitchToImportCommand}"
                    Style="{StaticResource ImportButtonStyle}"/>
            <Button Content="יצוא" 
                    Command="{Binding SwitchToExportCommand}"
                    Style="{StaticResource ExportButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Import Content -->
        <Grid Grid.Row="2" Grid.Column="0" 
              Visibility="{Binding IsImportSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Import Fields -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="מצהר:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ImportManifest}" 
                     Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="מספר מצהר"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="פרט:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ImportUnit}" 
                     Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="מספר פרט"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="מופע:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ImportAppearance}" 
                     Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="מספר מופע"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="סוג אחסון:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="3" Grid.Column="1" 
                      SelectedItem="{Binding SelectedStorageType}"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="רגיל" Tag="REG"/>
                <ComboBoxItem Content="קירור" Tag="FRZ"/>
                <ComboBoxItem Content="פארמה" Tag="PHARMA"/>
            </ComboBox>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="סוג מטען:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      SelectedItem="{Binding SelectedCargoType}"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="ULD" Tag="ULD"/>
                <ComboBoxItem Content="AWB" Tag="AWB"/>
            </ComboBox>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="גובה:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="5" Grid.Column="1" 
                      SelectedItem="{Binding SelectedHeightType}"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="נמוך" Tag="LOW"/>
                <ComboBoxItem Content="בינוני" Tag="MED"/>
                <ComboBoxItem Content="גבוה" Tag="HIGH"/>
            </ComboBox>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="אצבע מקור:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="6" Grid.Column="1" 
                      ItemsSource="{Binding Fingers}"
                      SelectedItem="{Binding SelectedSourceFinger}"
                      DisplayMemberPath="DisplayName"
                      Margin="0,0,0,10"
                      materialDesign:HintAssist.Hint="בחר אצבע מקור"/>
        </Grid>

        <!-- Export Content -->
        <Grid Grid.Row="2" Grid.Column="0" 
              Visibility="{Binding IsImportSelected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Export Fields -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="שטר מטען וקידומת:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding ExportSwbPrefix}" 
                         Width="100" Margin="0,0,10,0"
                         materialDesign:HintAssist.Hint="קידומת"/>
                <TextBox Grid.Column="1" Text="{Binding ExportAwbNumber}" 
                         materialDesign:HintAssist.Hint="מספר שטר מטען"/>
            </Grid>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="מופע קליטה:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ExportAwbAppearance}" 
                     Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="מספר מופע קליטה"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="מופע אחסון:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ExportAwbStorage}" 
                     Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="מספר מופע אחסון"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="סוג מטען:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="3" Grid.Column="1" 
                      SelectedItem="{Binding SelectedCargoType}"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="ULD" Tag="ULD"/>
                <ComboBoxItem Content="AWB" Tag="AWB"/>
            </ComboBox>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="גובה:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      SelectedItem="{Binding SelectedHeightType}"
                      Margin="0,0,0,10">
                <ComboBoxItem Content="נמוך" Tag="LOW"/>
                <ComboBoxItem Content="בינוני" Tag="MED"/>
                <ComboBoxItem Content="גבוה" Tag="HIGH"/>
            </ComboBox>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="אצבע יעד:" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="5" Grid.Column="1" 
                      ItemsSource="{Binding Fingers}"
                      SelectedItem="{Binding SelectedDestinationFinger}"
                      DisplayMemberPath="DisplayName"
                      Margin="0,0,0,10"
                      materialDesign:HintAssist.Hint="בחר אצבע יעד"/>
        </Grid>

        <!-- Sticker preview - Right side -->
        <Border Grid.Row="2" Grid.Column="1" 
                Width="300" Margin="10,0,0,0"
                Background="{Binding IsImportSelected, Converter={StaticResource BoolToBackgroundConverter}}"
                BorderBrush="{Binding IsImportSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                BorderThickness="1"
                CornerRadius="5">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Import Preview -->
                <TextBlock Grid.Row="0" 
                           Text="{Binding IsImportSelected, Converter={StaticResource BoolToPreviewTitleConverter}}" 
                           FontWeight="Bold" HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Import Sticker -->
                <Border Grid.Row="1" 
                        Background="#C8E6C9" 
                        BorderBrush="#43A047" 
                        BorderThickness="2"
                        CornerRadius="5" 
                        Padding="10"
                        Visibility="{Binding IsImportSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Top green bar -->
                        <Border Grid.Row="0" Background="#43A047" Height="30" 
                                Margin="-10,-10,-10,10">
                            <TextBlock Text="ממן- מסופי מטען וניטול בע&quot;מ" 
                                       FontWeight="Bold" FontSize="12" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Barcode placeholder -->
                        <Rectangle Grid.Row="1" Height="60" Fill="Black" Margin="0,0,0,10"/>

                        <!-- Title -->
                        <TextBlock Grid.Row="2" 
                                   Text="טיסה" 
                                   FontWeight="Bold" FontSize="18" 
                                   TextAlignment="Center" Margin="0,0,0,5"/>

                        <!-- Import Unit -->
                        <TextBlock Grid.Row="3" 
                                   Text="{Binding ImportUnit, TargetNullValue='[פרט]'}" 
                                   FontWeight="Bold" FontSize="24" 
                                   TextAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Task Code -->
                        <TextBlock Grid.Row="4" 
                                   Text="{Binding TaskDetails.Code}" 
                                   FontSize="14" 
                                   TextAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Height -->
                        <TextBlock Grid.Row="5" 
                                   Text="2" 
                                   FontWeight="Bold" FontSize="20" 
                                   TextAlignment="Center" Margin="0,0,0,5"/>

                        <!-- Box -->
                        <Border Grid.Row="6" BorderBrush="Black" BorderThickness="1" 
                                Width="80" Height="40" HorizontalAlignment="Center">
                            <TextBlock Text="2" FontWeight="Bold" FontSize="24" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Export Sticker -->
                <Border Grid.Row="1" 
                        Background="#FFB74D" 
                        BorderBrush="#F57C00" 
                        BorderThickness="2"
                        CornerRadius="5" 
                        Padding="10"
                        Visibility="{Binding IsImportSelected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Top orange bar -->
                        <Border Grid.Row="0" Background="#F57C00" Height="30" 
                                Margin="-10,-10,-10,10">
                            <TextBlock Text="ממן- מסופי מטען וניטול בע&quot;מ" 
                                       FontWeight="Bold" FontSize="12" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Barcode Placeholder -->
                        <Border Grid.Row="1" Height="60" Background="#DDDDDD" Margin="0,0,0,5">
                            <TextBlock Text="BARCODE" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAAAAA"/>
                        </Border>
                        
                        <!-- ULD Info -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="AWB" 
                                       FontWeight="Bold" FontSize="18" 
                                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding ExportAwbNumber, FallbackValue='1234', TargetNullValue='1234'}" 
                                       FontWeight="Bold" FontSize="24" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Flight info -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="AYYB" FontSize="10" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding TaskDetails.Code}" 
                                       FontSize="10" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="HAYB" FontSize="10" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding ExportSwbPrefix, FallbackValue='488-200', TargetNullValue='488-200'}" 
                                       FontSize="10" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- AWB Number -->
                        <TextBlock Grid.Row="5" Text="{Binding ExportAwbNumber, FallbackValue='55803', TargetNullValue='55803'}" 
                                   FontWeight="Bold" FontSize="36" 
                                   TextAlignment="Center" Margin="0,5,0,5"/>

                        <!-- Destination -->
                        <Grid Grid.Row="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="destination" FontSize="10" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding SelectedDestinationFinger.DisplayName, FallbackValue='R03', TargetNullValue='R03'}" 
                                       FontWeight="Bold" FontSize="24" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Info grid -->
                        <Grid Grid.Row="7" Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Appearance" FontSize="8" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding ExportAwbAppearance, FallbackValue='1', TargetNullValue='1'}" 
                                               FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <StackPanel>
                                    <TextBlock Text="Storage" FontSize="8" TextAlignment="Center"/>
                                    <TextBlock Text="{Binding ExportAwbStorage, FallbackValue='4', TargetNullValue='4'}" 
                                               FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Airline" FontSize="8" TextAlignment="Center"/>
                                    <TextBlock Text="C6" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Piece info -->
                        <Grid Grid.Row="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Piece" FontSize="10" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="1" Text="67" FontWeight="Bold" FontSize="14" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="2" Text="of" FontSize="10" 
                                       VerticalAlignment="Center" Margin="0,0,5,0"/>
                            
                            <TextBlock Grid.Column="3" Text="9" FontWeight="Bold" FontSize="14" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="שמור" Command="{Binding SaveCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#2196F3" BorderBrush="#1976D2"
                    Width="100" Margin="0,0,10,0"/>
            <Button Content="ביטול" Command="{Binding CancelCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100"/>
        </StackPanel>

        <!-- Status bar -->
        <StatusBar Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                   Height="25" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar IsIndeterminate="{Binding IsBusy}" 
                             Width="100" Height="15" 
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
