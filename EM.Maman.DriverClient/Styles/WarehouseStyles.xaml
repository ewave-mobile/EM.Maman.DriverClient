<!-- Styles/WarehouseStyles.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cell styles -->
    <Style x:Key="CellBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E9E9E9"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Margin" Value="4,2,4,2"/>
    </Style>

    <Style x:Key="CellTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Finger styles -->
    <Style x:Key="FingerBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#E9E9E9"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Background" Value="#E9E9E9"/>
        <Setter Property="Width" Value="50"/>
    </Style>

    <Style x:Key="FingerTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Level tab styles -->
    <Style x:Key="LevelTabButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Margin" Value="5,0"/>
    </Style>

    <Style x:Key="LevelTabTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="LevelTabCountStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Row position indicator style -->
    <Style x:Key="RowPositionStyle" TargetType="TextBlock">
        <Setter Property="Width" Value="18"/>
        <Setter Property="Height" Value="18"/>
        <!--<Setter Property="BorderBrush" Value="#E1E1E1"/>
        <Setter Property="BorderThickness" Value="1"/>-->
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="2,1,10,2"/>
    </Style>

    <!-- Trolley indicator style -->
    <Style x:Key="TrolleyIndicatorStyle" TargetType="Border">
        <Setter Property="Height" Value="19"/>
        <Setter Property="BorderBrush" Value="#E9E9E9"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Background" Value="#E9E9E9"/>
        <Setter Property="Margin" Value="20,2,20,2"/>
        <Setter Property="Width" Value="150"/>
    </Style>

    <Style x:Key="TrolleyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>