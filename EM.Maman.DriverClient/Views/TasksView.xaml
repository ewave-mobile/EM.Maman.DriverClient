<UserControl x:Class="EM.Maman.DriverClient.Views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EM.Maman.DriverClient.Views"
             xmlns:vm="clr-namespace:EM.Maman.DriverClient.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:EM.Maman.DriverClient.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             FlowDirection="RightToLeft"
             d:DataContext="{d:DesignInstance Type=vm:TaskViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:TaskTypeToColorConverter x:Key="TaskTypeToColorConverter" />
            <converters:TaskStatusToTextConverter x:Key="TaskStatusToTextConverter" />
            <converters:TaskStatusToColorConverter x:Key="TaskStatusToColorConverter" />
            <converters:TaskStatusToBrushConverter x:Key="TaskStatusToBrushConverter" />
            <converters:BoolInverterConverter x:Key="BoolInverterConverter" />

            <Style x:Key="TaskCardStyle" TargetType="Border">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#BDBDBD" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.2" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TaskTypeIndicatorStyle" TargetType="Border">
                <Setter Property="Width" Value="5" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="-10,0,0,0" />
            </Style>

            <Style x:Key="ActiveTaskStatusStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,5,0,15" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style x:Key="StepIndicatorStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="30" />
                <Setter Property="Height" Value="30" />
                <Setter Property="Fill" Value="#BDBDBD" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsCurrentStep}" Value="True">
                        <Setter Property="Fill" Value="#2196F3" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                        <Setter Property="Fill" Value="#4CAF50" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="StepConnectorStyle" TargetType="Rectangle">
                <Setter Property="Width" Value="50" />
                <Setter Property="Height" Value="2" />
                <Setter Property="Fill" Value="#BDBDBD" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                        <Setter Property="Fill" Value="#4CAF50" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="ניהול משימות" 
                     FontSize="24" FontWeight="Bold" Margin="0,0,0,15" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding RefreshTasksCommand}" ToolTip="רענן רשימה">
                    <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24" />
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding CreateImportTaskCommand}" Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Import" Margin="0,0,5,0" />
                        <TextBlock Text="יצירת משימת יבוא" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding CreateExportTaskCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Export" Margin="0,0,5,0" />
                        <TextBlock Text="יצירת משימת יצוא" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Active task area (visible only when a task is active) -->
        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="5" Padding="15"
                Margin="0,0,0,15" Visibility="{Binding IsTaskActive, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Active task header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="משימה פעילה: " FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="{Binding ActiveTask.Name}" FontSize="18" Margin="5,0,0,0" />
                </StackPanel>

                <!-- Task status -->
                <TextBlock Grid.Row="1" Text="{Binding StatusMessage}" 
                         Style="{StaticResource ActiveTaskStatusStyle}" />

                <!-- Progress steps visualization -->
                <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <!-- For Import: 5 steps + 4 connectors -->
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Dynamic step indicators based on task type -->
                    <ItemsControl Grid.Column="0" Grid.ColumnSpan="9"
                                ItemsSource="{Binding TaskSteps}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Step indicator -->
                                    <Grid>
                                        <Ellipse Style="{StaticResource StepIndicatorStyle}" />
                                        <TextBlock Text="{Binding StepNumber}" 
                                                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                 Foreground="White" FontWeight="Bold" />
                                    </Grid>

                                    <!-- Step description -->
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="100" Margin="5,0,5,0">
                                        <TextBlock Text="{Binding StepName}" TextWrapping="Wrap" 
                                                 FontSize="12" HorizontalAlignment="Center" />
                                    </StackPanel>

                                    <!-- Connector (except for last item) -->
                                    <Rectangle Style="{StaticResource StepConnectorStyle}"
                                             Visibility="{Binding IsLastStep, Converter={StaticResource BoolInverterConverter}, ConverterParameter=Visibility}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Progress bar -->
                <ProgressBar Grid.Row="3" Height="8" Value="{Binding ProgressPercentage, Mode=OneWay}" 
                           Maximum="100" Margin="0,0,0,15" />

                <!-- Task action buttons -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Navigation buttons -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                          Command="{Binding NavigateToSourceCommand}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckDelivery" Margin="0,0,5,0" />
                            <TextBlock Text="נווט למקור" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                          Command="{Binding NavigateToDestinationCommand}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckDelivery" Margin="0,0,5,0" />
                            <TextBlock Text="נווט ליעד" />
                        </StackPanel>
                    </Button>

                    <!-- Complete/Cancel buttons -->
                    <Button Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                          Command="{Binding CompleteTaskCommand}" Margin="0,0,10,0"
                          Background="#4CAF50" BorderBrush="#388E3C">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Margin="0,0,5,0" />
                            <TextBlock Text="סיים משימה" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                          Command="{Binding CancelTaskCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cancel" Margin="0,0,5,0" />
                            <TextBlock Text="בטל משימה" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tasks lists -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Pending Tasks Panel -->
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="משימות ממתינות" 
                         FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" />

                <!-- Filter and sort controls could go here -->

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding PendingTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TaskCardStyle}" Margin="5,5,10,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Task type indicator bar (left) -->
                                        <Border Grid.Column="0" Style="{StaticResource TaskTypeIndicatorStyle}"
                                              Background="{Binding TaskType, Converter={StaticResource TaskTypeToColorConverter}}" />

                                        <!-- Task details -->
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0,0,0,5" />
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="קוד: " FontSize="12" Foreground="#757575" />
                                                <TextBlock Text="{Binding Code}" FontSize="12" Foreground="#757575" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="נוצר: " FontSize="12" Foreground="#757575" />
                                                <TextBlock Text="{Binding CreatedDateTime, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                         FontSize="12" Foreground="#757575" />
                                            </StackPanel>
                                            <Border Background="{Binding Status, Converter={StaticResource TaskStatusToBrushConverter}}" 
                                                  CornerRadius="3" Padding="5,2" HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Status, Converter={StaticResource TaskStatusToTextConverter}}" 
                                                         FontSize="11" Foreground="White" />
                                            </Border>
                                            <TextBlock Text="{Binding Description}" FontSize="12" Margin="0,5,0,0" 
                                                     TextWrapping="Wrap" MaxHeight="60" />
                                        </StackPanel>

                                        <!-- Action button -->
                                        <Button Grid.Column="2" Style="{StaticResource MaterialDesignRaisedButton}" 
                                              Command="{Binding DataContext.StartTaskCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              CommandParameter="{Binding}"
                                              Margin="5,0,0,0" VerticalAlignment="Top">
                                            <TextBlock Text="התחל" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>

            <!-- Separator -->
            <Rectangle Grid.Column="1" Width="1" Fill="#E0E0E0" Margin="15,0" />

            <!-- Completed Tasks Panel -->
            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top" Text="משימות שהושלמו" 
                         FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" />

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding CompletedTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TaskCardStyle}" Margin="10,5,5,15" Opacity="0.8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Task type indicator bar (left) -->
                                        <Border Grid.Column="0" Style="{StaticResource TaskTypeIndicatorStyle}"
                                              Background="{Binding TaskType, Converter={StaticResource TaskTypeToColorConverter}}" />

                                        <!-- Task details -->
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Margin="0,0,0,5" />
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="קוד: " FontSize="12" Foreground="#757575" />
                                                <TextBlock Text="{Binding Code}" FontSize="12" Foreground="#757575" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="נוצר: " FontSize="12" Foreground="#757575" />
                                                <TextBlock Text="{Binding CreatedDateTime, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                         FontSize="12" Foreground="#757575" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="הושלם: " FontSize="12" Foreground="#757575" />
                                                <TextBlock Text="{Binding ExecutedDateTime, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                         FontSize="12" Foreground="#757575" />
                                            </StackPanel>
                                            <Border Background="{Binding Status, Converter={StaticResource TaskStatusToBrushConverter}}" 
                                                  CornerRadius="3" Padding="5,2" HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Status, Converter={StaticResource TaskStatusToTextConverter}}" 
                                                         FontSize="11" Foreground="White" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>