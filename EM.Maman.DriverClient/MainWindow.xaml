<Window x:Class="EM.Maman.DriverClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EM.Maman.DriverClient"
        xmlns:localModels="clr-namespace:EM.Maman.Models.LocalDbModels;assembly=EM.Maman.Models"
        xmlns:displaymodels="clr-namespace:EM.Maman.Models.DisplayModels;assembly=EM.Maman.Models"
        xmlns:viewmodels="clr-namespace:EM.Maman.DriverClient.ViewModels" 
        xmlns:converters="clr-namespace:EM.Maman.DriverClient.Converters" xmlns:controls="clr-namespace:EM.Maman.DriverClient.Controls"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="{StaticResource WindowHeight}" Width="{StaticResource WindowWidth}" Background="White">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EM.Maman.DriverClient;component/Styles/WarehouseStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToTabColorConverter x:Key="BoolToTabColorConverter"/>
            <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter"/>
            <converters:NullToCollapseConverter x:Key="NullToCollapseConverter"/>
            <converters:RowVisibilityConverter x:Key="RowVisibilityConverter"/>
            <converters:NullToHiddenConverter x:Key="NullToHiddenConverter"/>
            <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="White">
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Height="950" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Width="1150">
                <ScrollViewer Height="auto" Width="200">
                    <!-- Content for side panel -->
                </ScrollViewer>

                <StackPanel Width="700" Height="auto" Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Controls -->
                            <RowDefinition Height="Auto"/>
                            <!-- Warehouse Grid -->
                        </Grid.RowDefinitions>

                        <!-- Control buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" Margin="10" FlowDirection="LeftToRight">
                            <!-- Arrow buttons -->
                            <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                  Background="White" Margin="5" HorizontalAlignment="Center"
                                  Padding="0" VerticalAlignment="Center" Command="{Binding MoveTrolleyUpCommand}">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Padding="0"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       Foreground="#5F6368" />
                            </Button>
                            <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                  Background="White" Margin="5,5,30,5" Padding="0" Command="{Binding MoveTrolleyDownCommand}">
                                <materialDesign:PackIcon Kind="ArrowRight" Width="16" Height="16" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       Foreground="#5F6368" />
                            </Button>
                            <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
        Background="White" Margin="5" HorizontalAlignment="Center"
        Padding="0" VerticalAlignment="Center" Command="{Binding MoveTrolleyUpCommand}">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Padding="0"
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#5F6368" />
                            </Button>
                            <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
        Background="White" Margin="5,5,5,5" Padding="0" Command="{Binding MoveTrolleyDownCommand}">
                                <materialDesign:PackIcon Kind="ArrowRight" Width="16" Height="16" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Foreground="#5F6368" />
                            </Button>
                            <!-- More buttons as needed -->
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- Left Fingers (OUTSIDE border) -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Left Cells (WITH border) -->
                                <ColumnDefinition Width="*"/>
                                <!-- Center/Trolley -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Right Cells (WITH border) -->
                                <ColumnDefinition Width="*"/>
                                <!-- Right Fingers (OUTSIDE border) -->
                            </Grid.ColumnDefinitions>

                            <!-- Left Fingers (No Border) -->
                            <ItemsControl Grid.Column="0" ItemsSource="{Binding TrolleyVM.Rows}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                        <!-- Use a grid with style triggers for visibility -->
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding LeftFinger}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <controls:FingerControl 
                        Finger="{Binding LeftFinger}" 
                        IsSideRight="False"
                        Width="100" Margin="0,1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Left Cells with Border -->
                            <Border Grid.Column="1" 
            BorderBrush="#CCCCCC" BorderThickness="1" 
            CornerRadius="5" Margin="0,5,5,5">
                                <ItemsControl ItemsSource="{Binding TrolleyVM.Rows}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                            <!-- Show only cells and position indicator -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Left Outer Cell -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Left Inner Cell -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Position Indicator -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Left Outer Cell with visibility style -->
                                                <Grid Grid.Column="0">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LeftOuterCell}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <controls:CellControl CellInfo="{Binding LeftOuterCell}"/>
                                                </Grid>

                                                <!-- Left Inner Cell with visibility style -->
                                                <Grid Grid.Column="1">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LeftInnerCell}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <controls:CellControl CellInfo="{Binding LeftInnerCell}"/>
                                                </Grid>

                                                <!-- Position Indicator -->
                                                <Border Grid.Column="2" 
                                BorderBrush="#E1E1E1" BorderThickness="1" 
                                Height="18" Width="18" Margin="2,1,2,2">
                                                    <TextBlock Text="{Binding Position}" 
                                     FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- Center Column - Trolley Indicators -->
                            <!-- Center Column - Trolley Indicators -->
                            <ItemsControl Grid.Column="2" ItemsSource="{Binding TrolleyVM.Rows}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                        <!-- Use a MultiBinding with EqualityToVisibilityConverter -->
                                        <Border Height="19" BorderBrush="#E9E9E9" BorderThickness="2" 
                   CornerRadius="0" Padding="2" Background="#E9E9E9" 
                   Margin="10,2,10,2" Width="250" HorizontalAlignment="Center">
                                            <Border.Visibility>
                                                <MultiBinding Converter="{StaticResource EqualityToVisibilityConverter}">
                                                    <Binding Path="Position"/>
                                                    <Binding Path="DataContext.CurrentTrolley.Position" 
                                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                </MultiBinding>
                                            </Border.Visibility>
                                            <TextBlock Text="{Binding DataContext.CurrentTrolley.DisplayName, 
                         RelativeSource={RelativeSource AncestorType=Window}}" 
                         FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Right Cells with Border -->
                            <Border Grid.Column="3"
            BorderBrush="#CCCCCC" BorderThickness="1" 
            CornerRadius="5" Margin="5,5,0,5">
                                <ItemsControl ItemsSource="{Binding TrolleyVM.Rows}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                            <!-- Show only position indicator and cells -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Position Indicator -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Right Outer Cell -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Right Inner Cell -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Position Indicator -->
                                                <Border Grid.Column="0" 
                                BorderBrush="#E1E1E1" BorderThickness="1" 
                                Height="18" Width="18" Margin="2,1,2,2">
                                                    <TextBlock Text="{Binding Position}" 
                                     FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Right Outer Cell with visibility style -->
                                                <Grid Grid.Column="1">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RightOuterCell}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <controls:CellControl CellInfo="{Binding RightOuterCell}"/>
                                                </Grid>

                                                <!-- Right Inner Cell with visibility style -->
                                                <Grid Grid.Column="2">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RightInnerCell}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <controls:CellControl CellInfo="{Binding RightInnerCell}"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- Right Fingers (No Border) -->
                            <ItemsControl Grid.Column="4" ItemsSource="{Binding TrolleyVM.Rows}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                        <!-- Use a grid with style triggers for visibility -->
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RightFinger}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <controls:FingerControl 
                        Finger="{Binding RightFinger}" 
                        IsSideRight="True"
                        Width="100" Margin="0,1"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>

                    <!-- Level Tabs -->
                    <ItemsControl VerticalAlignment="Bottom" Grid.Row="1" 
                                ItemsSource="{Binding TrolleyVM.LevelTabs}" Margin="0,30,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource LevelTabButtonStyle}"
                                      Background="{Binding IsSelected, Converter={StaticResource BoolToTabColorConverter}}"
                                      Command="{Binding DataContext.TrolleyVM.SelectLevelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding Level.Number}">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource LevelTabTitleStyle}" 
                                                 Text="{Binding DisplayName}" 
                                                 Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                            <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                     Text="{Binding ItemCount}" 
                                                     Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                            <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                     Text=" | " 
                                                     Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                            <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                     Text="{Binding EmptyCount}" 
                                                     Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <!-- Right side panel content -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
