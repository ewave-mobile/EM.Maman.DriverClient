<Window x:Class="EM.Maman.DriverClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EM.Maman.DriverClient"
        xmlns:localModels="clr-namespace:EM.Maman.Models.LocalDbModels;assembly=EM.Maman.Models"
        xmlns:displaymodels="clr-namespace:EM.Maman.Models.DisplayModels;assembly=EM.Maman.Models"
        xmlns:viewmodels="clr-namespace:EM.Maman.DriverClient.ViewModels" 
        xmlns:converters="clr-namespace:EM.Maman.DriverClient.Converters" 
        xmlns:controls="clr-namespace:EM.Maman.DriverClient.Controls"
        xmlns:views="clr-namespace:EM.Maman.DriverClient.Views"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="{StaticResource WindowHeight}" Width="{StaticResource WindowWidth}" Background="White">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EM.Maman.DriverClient;component/Styles/WarehouseStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToTabColorConverter x:Key="BoolToTabColorConverter"/>
            <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter"/>
            <converters:NullToCollapseConverter x:Key="NullToCollapseConverter"/>
            <converters:RowVisibilityConverter x:Key="RowVisibilityConverter"/>
            <converters:NullToHiddenConverter x:Key="NullToHiddenConverter"/>
            <converters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
            <converters:BoolInverterConverter x:Key="BoolInverterConverter" />
            <converters:HasPalletToCellColorConverter x:Key="HasPalletToCellColorConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel Background="White">
        <!-- Bottom Navigation Bar - Using DockPanel.Dock="Bottom" to ensure it stays at the bottom -->
        <materialDesign:Card BorderBrush="#CDCDCD" BorderThickness="1" HorizontalContentAlignment="Right" DockPanel.Dock="Bottom" Margin="0" Padding="8" UniformCornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation buttons -->
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}" 
        Command="{Binding ShowWarehouseViewCommand}" 
                        Foreground="#CDCDCD" BorderBrush="#CDCDCD" BorderThickness="1"
        Visibility="{Binding IsWarehouseViewActive, Converter={StaticResource BoolInverterConverter}, ConverterParameter=Visibility}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Warehouse" Width="24" Height="24" Margin="0,0,0,0"/>
                        <!--<TextBlock Text="מחסן" VerticalAlignment="Center"/>-->
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}" 
                       Foreground="#CDCDCD" BorderBrush="#CDCDCD" BorderThickness="1"
                        Command="{Binding ShowTasksViewCommand}"
                        Visibility="{Binding IsWarehouseViewActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardListOutline" Width="24" Height="24" Margin="0,0,0,0"/>
                        <!--<TextBlock Text="משימות" VerticalAlignment="Center"/>-->
                    </StackPanel>
                </Button>

                <!-- Additional buttons can be added here -->
            </Grid>
        </materialDesign:Card>

        <!-- Main Content Area - Takes all remaining space -->
        <Grid>
            <!-- Warehouse View -->
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsWarehouseViewActive}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Height="950" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" Width="1150">
                        <ScrollViewer Height="auto" Width="200">
                            <!-- Content for side panel -->
                        </ScrollViewer>

                        <StackPanel Width="700" Height="auto" Orientation="Vertical" FlowDirection="LeftToRight">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Controls -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Warehouse Grid -->
                                </Grid.RowDefinitions>

                                <!-- Control buttons -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" Margin="10" FlowDirection="LeftToRight">
                                    <!-- Arrow buttons -->
                                    <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                          Background="White" Margin="5" HorizontalAlignment="Center"
                                          Padding="0" VerticalAlignment="Center" Command="{Binding TestUnloadLeftCellCommand}">
                                        <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Padding="0"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               Foreground="#5F6368" />
                                    </Button>
                                    <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                          Background="White" Margin="5,5,30,5" Padding="0" Command="{Binding TestLoadLeftCellCommand}">
                                        <materialDesign:PackIcon Kind="ArrowRight" Width="16" Height="16" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               Foreground="#5F6368" />
                                    </Button>
                                    <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                          Background="White" Margin="5" HorizontalAlignment="Center"
                                          Padding="0" VerticalAlignment="Center" Command="{Binding TestLoadRightCellCommand}">
                                        <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Padding="0"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               Foreground="#5F6368" />
                                    </Button>
                                    <Button Width="20" Height="20" BorderBrush="#CDCDCD" BorderThickness="1"
                                          Background="White" Margin="5,5,5,5" Padding="0" Command="{Binding TestUnloadRightCellCommand}">
                                        <materialDesign:PackIcon Kind="ArrowRight" Width="16" Height="16" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                               Foreground="#5F6368" />
                                    </Button>
                                    <!-- More buttons as needed -->
                                </StackPanel>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <!-- Left Fingers (OUTSIDE border) -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Left Cells (WITH border) -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Center/Trolley -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Right Cells (WITH border) -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Right Fingers (OUTSIDE border) -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Fingers (No Border) -->
                                    <ItemsControl Grid.Column="0" ItemsSource="{Binding TrolleyVM.Rows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"  />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                                <!-- Use a grid with style triggers for visibility -->
                                                <Grid>
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding LeftFinger}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>

                                                    <controls:FingerControl FlowDirection="RightToLeft"
                                                                          Finger="{Binding LeftFinger}" 
                                                                          IsSideRight="True"
                                                                          CurrentLevel="{Binding DataContext.TrolleyVM.SelectedLevelNumber, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                          Width="100" Margin="0,0.5"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Left Cells with Border -->
                                    <Border Grid.Column="1" 
                                          BorderBrush="#CCCCCC" BorderThickness="1" 
                                          CornerRadius="5" Margin="0,0,0,0">
                                        <ItemsControl ItemsSource="{Binding TrolleyVM.Rows}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                                    <!-- Show only cells and position indicator -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Left Outer Cell -->
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Left Inner Cell -->
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Position Indicator -->
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Left Outer Cell with visibility style -->
                                                        <Grid Grid.Column="1">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding LeftOuterCell}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <controls:CellControl CellInfo="{Binding LeftOuterCell}"
                                                                               PalletInfo="{Binding LeftOuterPallet}"
                                                                               HasPallet="{Binding HasLeftOuterPallet}"/>
                                                        </Grid>

                                                        <!-- Left Inner Cell with visibility style -->
                                                        <Grid Grid.Column="0">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding LeftInnerCell}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <controls:CellControl CellInfo="{Binding LeftInnerCell}"
                                                                               PalletInfo="{Binding LeftInnerPallet}"
                                                                               HasPallet="{Binding HasLeftInnerPallet}"/>
                                                        </Grid>

                                                        <!-- Position Indicator -->
                                                        <Border Grid.Column="2" 
                                                              BorderBrush="#E1E1E1" BorderThickness="1" 
                                                              Height="18" Width="18" Margin="2,1,2,2">
                                                            <TextBlock Text="{Binding Position}" 
                                                                     FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Center Column - Trolley with Cells -->
                                    <ItemsControl Grid.Column="2" ItemsSource="{Binding TrolleyVM.Rows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                                <controls:TrolleyWithCellsControl 
                                                                               RowPosition="{Binding Position}"
                                                                               TrolleyPosition="{Binding DataContext.CurrentTrolley.Position, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                               TrolleyName="{Binding DataContext.TrolleyVM.TrolleyName, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                               LeftCell="{Binding DataContext.TrolleyVM.LeftCell, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                               RightCell="{Binding DataContext.TrolleyVM.RightCell, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                               HorizontalAlignment="Center"
                                                                               Margin="10,1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- Right Cells with Border -->
                                    <Border Grid.Column="3"
                                          BorderBrush="#CCCCCC" BorderThickness="1" 
                                          CornerRadius="5" Margin="0,0,0,0">
                                        <ItemsControl ItemsSource="{Binding TrolleyVM.Rows}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Vertical"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                                    <!-- Show only position indicator and cells -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Position Indicator -->
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Right Outer Cell -->
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Right Inner Cell -->
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Position Indicator -->
                                                        <Border Grid.Column="0" 
                                                              BorderBrush="#E1E1E1" BorderThickness="1" 
                                                              Height="18" Width="18" Margin="2,2,2,2">
                                                            <TextBlock Text="{Binding Position}" 
                                                                     FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>

                                                        <!-- Right Outer Cell with visibility style -->
                                                        <Grid Grid.Column="1">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding RightOuterCell}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <controls:CellControl CellInfo="{Binding RightOuterCell}"
                                                                               PalletInfo="{Binding RightOuterPallet}"
                                                                               HasPallet="{Binding HasRightOuterPallet}"/>
                                                        </Grid>

                                                        <!-- Right Inner Cell with visibility style -->
                                                        <Grid Grid.Column="2">
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding RightInnerCell}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <controls:CellControl CellInfo="{Binding RightInnerCell}"
                                                                               PalletInfo="{Binding RightInnerPallet}"
                                                                               HasPallet="{Binding HasRightInnerPallet}"/>
                                                        </Grid>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <!-- Right Fingers (No Border) -->
                                    <ItemsControl Grid.Column="4" ItemsSource="{Binding TrolleyVM.Rows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type displaymodels:CompositeRow}">
                                                <!-- Use a grid with style triggers for visibility -->
                                                <Grid>
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RightFinger}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="hidden"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>

                                                    <controls:FingerControl  FlowDirection="RightToLeft"
                                                                          Finger="{Binding RightFinger}" 
                                                                          IsSideRight="False"
                                                                          CurrentLevel="{Binding DataContext.TrolleyVM.SelectedLevelNumber, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                          Width="100" Margin="0,0.5"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>

                            <!-- Level Tabs -->
                            <ItemsControl VerticalAlignment="Bottom" Grid.Row="1" 
                                        ItemsSource="{Binding TrolleyVM.LevelTabs}" Margin="0,30,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource LevelTabButtonStyle}"
                                              Background="{Binding IsSelected, Converter={StaticResource BoolToTabColorConverter}}"
                                              Command="{Binding DataContext.TrolleyVM.SelectLevelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding Level.Number}">
                                            <StackPanel>
                                                <TextBlock Style="{StaticResource LevelTabTitleStyle}" 
                                                         Text="{Binding DisplayName}" 
                                                         Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                    <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                             Text="{Binding ItemCount}" 
                                                             Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                                    <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                             Text=" | " 
                                                             Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                                    <TextBlock Style="{StaticResource LevelTabCountStyle}" 
                                                             Text="{Binding EmptyCount}" 
                                                             Foreground="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <!-- Right side panel content -->
                    </StackPanel>
                </StackPanel>
            </ContentControl>

            <!-- Tasks View -->
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsWarehouseViewActive}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
                <views:TasksView DataContext="{Binding TaskVM}" />
            </ContentControl>
        </Grid>
    </DockPanel>
</Window>